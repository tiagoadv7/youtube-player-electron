{
  "name": "youtube-player-electron",
  "version": "1.0.24",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "Tiago Lima",
  "license": "ISC",
  "description": "Sonoplastia IASD",
  "dependencies": {
    "font-awesome": "^4.7.0",
    "tailwindcss": "^3.4.10"
  },
  "devDependencies": {
    "electron": "^32.0.2",
    "electron-builder": "^24.3.0"
  },
  "build": {
    "appId": "com.yourname.youtubeplayer",
    "productName": "Youtube Player",
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icons/icon.svg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "Youtube Player",
      "installerIcon": "build/icons/icon.svg",
      "uninstallerIcon": "build/icons/uninstall.ico",
      "uninstallDisplayName": "Youtube Player",
      "license": "license.txt",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Youtube Player"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icons/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icons"
    }
  }
}
